---
import { buttonVariants } from "@/components/ui/button";
import ThemeToggle from "@/components/ThemeToggle.astro";
import Search from "@/components/Search.astro";
import { navBarLinks } from '@/config.ts';
import BurgerMenu from '@/components/react/BurgerMenu';
---

<header class="bg-background/95 supports-[backdrop-filter]:bg-background/60 sticky top-0 z-50 w-full border-b backdrop-blur">
  <div class="container flex h-16 items-center space-x-4 sm:justify-between sm:space-x-0">
    <div class="flex gap-6 md:gap-10">
      <div class="md:hidden">
        <BurgerMenu client:only="react" />
      </div>
      <nav class="hidden md:block">
        <ul class="flex items-center gap-2">
          {navBarLinks.map((link) => (
            <li>
              <a
                class="group px-4 py-2 rounded-lg"
                href={link.url}
                target={link.external ? "_blank" : "_self"}
              >
                {link.title}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </div>
    <div class="flex flex-1 items-center justify-end space-x-4">
      <nav class="flex items-center space-x-1">
        <a
          href="https://github.com/AREA44/astro-shadcn-ui-template"
          target="_blank"
          rel="noreferrer"
          class={buttonVariants({ variant: 'ghost' })}
        >
          GitHub
        </a>
        <Search />
        <ThemeToggle />
      </nav>
    </div>
  </div>
</header>
